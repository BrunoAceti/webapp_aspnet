@model List<webAPP_ASPNET.Models.CartItem>

@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}

<div class="container my-5">

    <!-- Título da página -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Sneakers</h1>
        <p class="text-muted">Confira os destaques da SANTA</p>
    </div>

    <!-- Grid de produtos -->
    <div class="row justify-content-center">

@foreach (var product in Model)
{
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="product-card">

                    <span class="badge-product">NOVO</span>

                    <button class="btn-favorite">
                        <i class="bi bi-heart"></i>
                    </button>

                    <div class="product-image">
                        <img src="@product.Image" alt="@product.Name">

                        <div class="product-overlay">
                            <button class="btn btn-light rounded-pill px-4"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalProduto_@product.ProductId">
                                <i class="bi bi-search me-1"></i> Ver detalhes
                            </button>
                        </div>
                    </div>

                    <div class="product-info text-center">
                        <h5 class="product-title">@product.Name</h5>
                        <span class="product-price">
                            R$ @product.Price.ToString("N2")
                        </span>

                        <form asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post"
                              class="mt-3">

                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <input type="hidden" name="name" value="@product.Name" />
                            <input type="hidden" name="price" value="@product.Price" />
                            <input type="hidden" name="image" value="@product.Image" />

                            <button type="submit"
                                    class="btn btn-dark w-100 rounded-pill">
                                <i class="bi bi-bag me-2"></i>Adicionar
                            </button>
                        </form>
                    </div>

                </div>
            </div>

            <!-- ================= MODAL PRODUTO ================= -->
            <div class="modal fade"
                 id="modalProduto_@product.ProductId"
                 tabindex="-1"
                 aria-hidden="true">

                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content border-0 rounded-4 overflow-hidden shadow">

                        <div class="row g-0">

                            <!-- IMAGEM -->
                            <div class="col-lg-6 bg-light d-flex align-items-center justify-content-center p-4">
                                <img src="@product.Image"
                                     class="img-fluid rounded-3"
                                     alt="@product.Name">
                            </div>

                            <!-- INFO -->
                            <div class="col-lg-6 p-5">

                                <div class="d-flex justify-content-between mb-3">
                                    <h2 class="fw-bold mb-0">@product.Name</h2>
                                    <button class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <p class="fs-3 fw-semibold mb-2">
                                    R$ @product.Price.ToString("N2")
                                </p>

                                <p class="text-muted">
                                    Produto premium com design exclusivo,
                                    materiais de alta qualidade e máximo conforto.
                                </p>

                                <div class="mt-4">
                                    <label class="fw-semibold mb-2">Tamanho</label>
                                    <select class="form-select form-select-lg rounded-pill">
                                        <option disabled selected>Selecione</option>
                                        <option>38</option>
                                        <option>39</option>
                                        <option>40</option>
                                        <option>41</option>
                                        <option>42</option>
                                    </select>
                                </div>

                                <form asp-controller="Cart"
                                      asp-action="AddToCart"
                                      method="post"
                                      class="mt-5">

                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="name" value="@product.Name" />
                                    <input type="hidden" name="price" value="@product.Price" />
                                    <input type="hidden" name="image" value="@product.Image" />

                                    <button class="btn btn-dark w-100 py-3 rounded-pill fw-semibold">
                                        <i class="bi bi-bag me-2"></i>
                                        Adicionar ao Carrinho
                                    </button>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
}
