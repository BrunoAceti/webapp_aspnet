@model List<webAPP_ASPNET.Models.CartItem>

@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}

<div class="container my-5">

    <!-- Título da página -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Sneakers</h1>
        <p class="text-muted">Confira os destaques da SANTA</p>
    </div>

    <!-- Grid de produtos -->
    <div class="row justify-content-center">

@foreach (var product in Model)
{
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="product-card">

                    <span class="badge-product">NOVO</span>

                    <button class="btn-favorite">
                        <i class="bi bi-heart"></i>
                    </button>

                    <div class="product-image">
                        <img src="@product.Image" alt="@product.Name">

                        <div class="product-overlay">
                            <button class="btn btn-light rounded-pill px-4"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalProduto_@product.ProductId">
                                <i class="bi bi-search me-1"></i> Ver detalhes
                            </button>
                        </div>
                    </div>

                    <div class="product-info text-center">
                        <h5 class="product-title">@product.Name</h5>
                        <span class="product-price">
                            R$ @product.Price.ToString("N2")
                        </span>

                        <form asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post"
                              class="mt-3">

                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <input type="hidden" name="name" value="@product.Name" />
                            <input type="hidden" name="price" value="@product.Price" />
                            <input type="hidden" name="image" value="@product.Image" />

                            <button type="submit"
                                    class="btn btn-dark w-100 rounded-pill">
                                <i class="bi bi-bag me-2"></i>Adicionar
                            </button>
                        </form>
                    </div>

                </div>
            </div>

            <!-- ================= MODAL PRODUTO ================= -->
            <div class="modal fade"
                 id="modalProduto_@product.ProductId"
                 tabindex="-1"
                 aria-hidden="true">

                <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">

                        <div class="row g-0">

                            <!-- COLUNA IMAGEM -->
                            <div class="col-lg-6 bg-light d-flex align-items-center justify-content-center position-relative">

                                <span class="position-absolute top-0 start-0 m-4 badge bg-dark rounded-pill px-3 py-2">
                                    NOVO
                                </span>

                                <img src="@product.Image"
                                     class="img-fluid p-5"
                                     style="max-height: 520px; object-fit: contain;"
                                     alt="@product.Name">
                            </div>

                            <!-- COLUNA INFO -->
                            <div class="col-lg-6 p-5">

                                <!-- HEADER -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h2 class="fw-bold mb-1">@product.Name</h2>
                                        <span class="text-muted small">Código: @product.ProductId</span>
                                    </div>
                                    <button class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- PREÇO -->
                                <div class="mb-4">
                                    <span class="fs-2 fw-bold text-dark">
                                        R$ @product.Price.ToString("N2")
                                    </span>
                                    <div class="text-success small mt-1">
                                        <i class="bi bi-check-circle me-1"></i> Em estoque
                                    </div>
                                </div>

                                <!-- DESCRIÇÃO -->
                                <p class="text-muted lh-lg">
                                    Sneaker premium com design exclusivo, materiais de alta qualidade
                                    e conforto superior para o dia a dia.
                                    Ideal para quem busca estilo e performance.
                                </p>

                                <!-- TAMANHOS -->
                                <div class="mt-4">
                                    <label class="fw-semibold mb-2 d-block">Selecione o tamanho</label>

                                    <div class="d-flex gap-2 flex-wrap">
                                        @foreach (var size in new[] { "38", "39", "40", "41", "42" })
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-dark rounded-pill px-4">
                                                @size
                                            </button>
                                        }
                                    </div>
                                </div>

                                <!-- CTA -->
                                <form asp-controller="Cart"
                                      asp-action="AddToCart"
                                      method="post"
                                      class="mt-5">

                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="name" value="@product.Name" />
                                    <input type="hidden" name="price" value="@product.Price" />
                                    <input type="hidden" name="image" value="@product.Image" />

                                    <button class="btn btn-dark w-100 py-3 rounded-pill fw-semibold fs-5">
                                        <i class="bi bi-bag me-2"></i>
                                        Adicionar ao carrinho
                                    </button>
                                </form>

                                <!-- INFO EXTRA -->
                                <div class="mt-4 d-flex gap-4 text-muted small">
                                    <span><i class="bi bi-truck me-1"></i> Frete rápido</span>
                                    <span><i class="bi bi-shield-check me-1"></i> Compra segura</span>
                                    <span><i class="bi bi-arrow-repeat me-1"></i> Troca fácil</span>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
}
