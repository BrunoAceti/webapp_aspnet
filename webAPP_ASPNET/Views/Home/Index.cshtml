@{
    ViewData["Title"] = "Home - SANTA";
    Layout = "_Layout";
}


<div class="home-page">
    <!-- HERO / CARROSSEL -->
    <section id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000" style="height:100vh;">
        <div class="carousel-inner h-100">

            <!-- Slide 1 -->
            <div class="carousel-item active h-100"
                 style="background:url('@Url.Content("/resources/carrocel1.jpg")') center/cover no-repeat;">
                <div class="d-flex flex-column justify-content-center align-items-center text-center text-white h-100 bg-dark bg-opacity-50">
                    <h1 class="display-4 fw-bold mb-3">SNEAKERS COM ESTILO</h1>
                    <p class="lead mb-4">Os modelos mais exclusivos e desejados — direto para você.</p>
                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-light btn-lg">
                        Ver Produtos
                    </a>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item h-100"
                 style="background:url('@Url.Content("/resources/carrocel2.jpg")') center/cover no-repeat;">
                <div class="d-flex flex-column justify-content-center align-items-center text-center text-white h-100 bg-dark bg-opacity-50">
                    <h1 class="display-4 fw-bold mb-3">CONFORTO E AUTENTICIDADE</h1>
                    <p class="lead mb-4">Explore o melhor das marcas mais icônicas do streetwear.</p>
                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-light btn-lg">
                        Ver Produtos
                    </a>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item h-100"
                 style="background:url('@Url.Content("/resources/carrocel3.jpg")') center/cover no-repeat;">
                <div class="d-flex flex-column justify-content-center align-items-center text-center text-white h-100 bg-dark bg-opacity-50">
                    <h1 class="display-4 fw-bold mb-3">EXCLUSIVIDADE SANTA</h1>
                    <p class="lead mb-4">Cada par conta uma história — encontre o seu.</p>
                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-light btn-lg">
                        Ver Produtos
                    </a>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </section>

    <!-- SOBRE -->
    <section id="sobre" class="container my-5 py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Sobre a SANTA</h2>
            <p class="text-muted mt-3">
                Mais do que uma loja, somos uma comunidade apaixonada por sneakers.
                Trabalhamos com os modelos mais raros e autênticos das maiores marcas do mundo.
            </p>
        </div>

        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="bi bi-box-seam display-5 mb-3"></i>
                <h5>Autenticidade Garantida</h5>
                <p class="text-muted">Todos os produtos são verificados e originais.</p>
            </div>

            <div class="col-md-4 mb-4">
                <i class="bi bi-truck display-5 mb-3"></i>
                <h5>Entrega Rápida</h5>
                <p class="text-muted">Envios para todo o Brasil com rastreio.</p>
            </div>

            <div class="col-md-4 mb-4">
                <i class="bi bi-heart display-5 mb-3"></i>
                <h5>Comunidade Sneakerhead</h5>
                <p class="text-muted">Criado por quem vive o streetwear.</p>
            </div>
        </div>
    </section>

    <!-- MARCAS -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Marcas em Destaque</h2>

            <div class="d-flex justify-content-center flex-wrap align-items-center gap-5">
                <img src="https://upload.wikimedia.org/wikipedia/commons/2/20/Adidas_Logo.svg" style="height:60px;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" style="height:50px;">
                <img src="@Url.Content("resources/puma.png")" style="height:80px;">
            </div>
        </div>
    </section>

    <!-- CONTATO -->
    <section id="contato" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Entre em Contato</h2>
                <p class="text-muted">Fale com a equipe da SANTA</p>
            </div>

            <form class="mx-auto bg-white p-5 shadow rounded-4" style="max-width:600px;">
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input type="text" class="form-control form-control-lg">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control form-control-lg">
                </div>

                <div class="mb-4">
                    <label class="form-label">Mensagem</label>
                    <textarea class="form-control form-control-lg" rows="4"></textarea>
                </div>

                <button class="btn btn-dark w-100 btn-lg">Enviar</button>
            </form>
        </div>
    </section>
</div>

