@model List<webAPP_ASPNET.Models.CartItem>

@{
    ViewData["Title"] = "Carrinho";
    Layout = "_Layout";

    decimal total = Model.Sum(item => item.Price * item.Quantity);
}

<div class="container my-5">

    <!-- Título -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Meu Carrinho</h1>
        <p class="text-muted">Revise seus produtos antes de finalizar a compra</p>
    </div>

    @if (!Model.Any())
    {
        <!-- Carrinho vazio -->
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h3 class="mt-4">Seu carrinho está vazio</h3>
            <p class="text-muted">Adicione produtos para continuar</p>

            <a asp-controller="Product"
               asp-action="Index"
               class="btn btn-dark mt-3 px-5 rounded-pill">
                <i class="bi bi-arrow-left me-2"></i> Voltar para produtos
            </a>
        </div>
    }
    else
    {
        <div class="row">

            <!-- Lista de produtos -->
            <div class="col-lg-8">

                @foreach (var item in Model)
                {
                    <div class="card mb-4 shadow-sm border-0 rounded-4">
                        <div class="card-body">
                            <div class="row align-items-center">

                                <!-- Imagem -->
                                <div class="col-3 col-md-2">
                                    <img src="@item.Image"
                                         class="img-fluid rounded-3"
                                         alt="@item.Name">
                                </div>

                                <!-- Info -->
                                <div class="col-9 col-md-4">
                                    <h5 class="fw-semibold mb-1">@item.Name</h5>
                                    <span class="text-muted">
                                        R$ @item.Price.ToString("N2")
                                    </span>
                                </div>

                                <!-- Quantidade -->
                                <div class="col-md-2 text-center mt-3 mt-md-0">
                                    <span class="fw-semibold">Qtd</span>
                                    <div class="mt-1">@item.Quantity</div>
                                </div>

                                <!-- Subtotal -->
                                <div class="col-md-2 text-center mt-3 mt-md-0">
                                    <span class="fw-semibold">Subtotal</span>
                                    <div class="mt-1">
                                        R$ @(item.Price* item.Quantity).ToString("N2")
                                    </div>
                                </div>

                                <!-- Remover -->
                                <div class="col-md-2 text-end mt-3 mt-md-0">
                                    <a asp-controller="Cart"
                                       asp-action="Remove"
                                       asp-route-productId="@item.ProductId"
                                       class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                }

                <!-- Ações -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-dark rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Continuar comprando
                    </a>

                    <a asp-controller="Cart"
                       asp-action="Clear"
                       class="btn btn-outline-danger rounded-pill px-4">
                        <i class="bi bi-x-circle me-2"></i> Limpar carrinho
                    </a>
                </div>

            </div>

            <!-- Resumo do pedido -->
            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">

                        <h4 class="fw-bold mb-4">Resumo</h4>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>R$ @total.ToString("N2")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Frete</span>
                            <span class="text-success">Grátis</span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between fw-bold fs-5 mb-4">
                            <span>Total</span>
                            <span>R$ @total.ToString("N2")</span>
                        </div>

                        <a asp-controller="Cart"
                           asp-action="Checkout"
                           class="btn btn-dark w-100 py-3 rounded-pill fw-semibold">
                            <i class="bi bi-credit-card me-2"></i> Finalizar Compra
                        </a>

                    </div>
                </div>
            </div>

        </div>
    }
</div>