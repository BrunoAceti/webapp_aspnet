@{
    Layout = null;
    ViewBag.Title = "Login - SANTA";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | SANTA</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        body {
            min-height: 100vh;
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .login-card {
            background: #fff;
            border-radius: 16px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 20px 40px rgba(0,0,0,.08);
            overflow: hidden;
        }

        .login-header {
            padding: 32px 24px 16px;
            text-align: center;
        }

            .login-header img {
                height: 36px;
                margin-bottom: 12px;
            }

            .login-header h1 {
                font-weight: 700;
                letter-spacing: 1px;
                margin: 0;
            }

        .login-body {
            padding: 24px 32px 32px;
        }

        .form-control {
            height: 48px;
            border-radius: 10px;
        }

        .btn-login {
            height: 48px;
            border-radius: 10px;
            background: #000;
            border: none;
            font-weight: 600;
            letter-spacing: .5px;
        }

            .btn-login:hover {
                background: #111;
            }

        .login-footer {
            text-align: center;
            font-size: .85rem;
            color: #888;
            padding: 16px;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>

    <div class="login-card">

        <!-- HEADER -->
        <div class="login-header">
            <h1>SANTA</h1>
        </div>

        <!-- FORM -->
        <div class="login-body">
            <form asp-controller="Login" asp-action="Login" method="post">

                <div class="mb-3">
                    <label class="form-label fw-medium">Usuário</label>
                    <input type="text"
                           name="username"
                           class="form-control"
                           placeholder="Digite seu usuário"
                           required>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-medium">Senha</label>
                    <input type="password"
                           name="password"
                           class="form-control"
                           placeholder="Digite sua senha"
                           required>
                </div>

                <button type="submit" class="btn btn-login text-white w-100 mb-3">
                    Entrar
                </button>

                <div class="text-center">
                    <span class="text-muted">Ainda não tem conta?</span><br />
                    <a asp-controller="Login"
                       asp-action="Register"
                       class="fw-semibold text-decoration-none">
                        Cadastre-se
                    </a>
                </div>

            </form>
        </div>

        <!-- FOOTER -->
        <div class="login-footer">
            © 2025 SANTA — Todos os direitos reservados
        </div>

    </div>

</body>
</html>